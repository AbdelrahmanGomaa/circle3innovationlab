<section class="footer-area pt-100px">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 responsive-column-half">
                <div class="footer-item">
                    <a href="@homePage.Url()">
                        <img src="@Logo?.MediaUrl()"
                             alt="footer logo"
                             class="footer__logo" />
                    </a>
                    <ul class="generic-list-item pt-4">
                        <li><a href="tel:+2@homePage.Value("footerNumber")">@homePage.Value("footerNumber")</a></li>
                        <li>
                            <a href="mailto:@homePage.Value("footerMail")">@homePage.Value("footerMail")</a>
                        </li>
                        <li>
                            <a href="https://g.co/kgs/3mHq9TN" target="_blank">@homePage.Value("footerAddress")</a>
                        </li>
                    </ul>
                    <h3 class="fs-20 font-weight-semi-bold pt-4 pb-2">@homePage.Value("footerTitle")</h3>
                    <ul class="social-icons social-icons-styled">
                        <li class="me-1">
                            <a href="#" class="facebook-bg">
                                <i class="la la-facebook"></i>
                            </a>
                        </li>
                        <li class="me-1">
                            <a href="#" class="twitter-bg">
                                <i class="la la-twitter"></i>
                            </a>
                        </li>
                        <li class="me-1">
                            <a href="#" class="instagram-bg">
                                <i class="la la-instagram"></i>
                            </a>
                        </li>
                        <li class="me-1">
                            <a href="#" class="linkedin-bg">
                                <i class="la la-linkedin"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- end footer-item -->
            </div>
            <!-- end col-lg-3 -->
            <div class="col-lg-3 responsive-column-half">
                <div class="footer-item">
                    <h3 class="fs-20 font-weight-semi-bold">@homePage.Value("footerTitle2")</h3>
                    <span class="section-divider section--divider"></span>
                    
                    
                    <ul class="generic-list-item">
                         @foreach (var item in selection)
                                {
                                    <li>
                                        <a href="@item.Url()">
                                     @(!(String.IsNullOrEmpty(item.Value<String>("menuDisplayName"))) ? item.Value("menuDisplayName") : item.Name)
                                    </a></li>
                                }
                        
                        
                       
                       
                       
                    </ul>
                </div>
                <!-- end footer-item -->
            </div>
            <!-- end col-lg-3 -->
            <div class="col-lg-3 responsive-column-half">
                <div class="footer-item">
                    <h3 class="fs-20 font-weight-semi-bold">@homePage.Value("footerTitle3")</h3>
                    <span class="section-divider section--divider"></span>
                    
                    
                    
                    @{
                    var coursesHome = Umbraco.Content(Guid.Parse("b8b5cd93-fb63-4b46-9b77-e618dc047eee"));
                    var categories = coursesHome?.Children().Where(x => x.IsVisible());
                
                    var allCourses = new List<IPublishedContent>();
                
                    foreach (var category in categories)
                    {
                        var courses = category.ChildrenOfType("courseDetails").Where(x => x.IsVisible());
                        allCourses.AddRange(courses);
                    }
                
                    var randomThreeCourses = allCourses
                        .OrderBy(x => Guid.NewGuid())
                        .Take(4);
                }
                
                <ul class="generic-list-item">
                    @foreach (var course in randomThreeCourses)
                    {
                        <li>
                            <a href="@course.Url()">@course.Name()</a>
                        </li>
                    }
                </ul>


                        
                     
                </div>
                <!-- end footer-item -->
            </div>
            <!-- end col-lg-3 -->
            <div class="col-lg-3 responsive-column-half">
                <div class="footer-item">
                    <h3 class="fs-20 font-weight-semi-bold">@homePage.Value("footerTitle4")</h3>
                    <span class="section-divider section--divider"></span>
                 
                 
                 
                                     
                    @{
                    	var selectionBlogs = Umbraco.Content(Guid.Parse("95dc5cda-2977-4661-8da4-1f1b749198e0"))
                        .ChildrenOfType("blogDetails")
                        .Where(x => x.IsVisible())
                        .OrderByDescending(x => x.UpdateDate)
                     .Take(4);
                    }
                   
                    <ul class="generic-list-item">
                    	@foreach (var item in selectionBlogs)
                    	{
                    		<li>
                    			<a href="@item.Url()">@item.Name()</a>
                    		</li>
                    	}
                    </ul>


                </div>
                <!-- end footer-item -->
            </div>
            <!-- end col-lg-3 -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
    <div class="section-block"></div>
    <div class="copyright-content py-4">
